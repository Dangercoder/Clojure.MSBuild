{
  "$schema": "http://json.schemastore.org/template",
  "author": "Clojure.MSBuild",
  "classifications": ["Console", "Clojure"],
  "identity": "Clojure.MSBuild.App",
  "name": "Clojure CLR Console App",
  "shortName": "clojure-app",
  "description": "A Clojure CLR console application with MSBuild integration",
  "tags": {
    "language": "Clojure",
    "type": "project"
  },
  "sourceName": "ClojureApp",
  "preferNameDirectory": true,
  "symbols": {
    "framework": {
      "type": "parameter",
      "description": "The target framework for the project",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net9.0",
          "description": ".NET 9.0"
        },
        {
          "choice": "net8.0",
          "description": ".NET 8.0"
        }
      ],
      "defaultValue": "net9.0",
      "replaces": "{FRAMEWORK}"
    },
    "clojureVersion": {
      "type": "parameter",
      "description": "The version of Clojure CLR to use",
      "datatype": "string",
      "defaultValue": "1.12.2",
      "replaces": "{CLOJURE_VERSION}"
    },
    "enableTests": {
      "type": "parameter",
      "description": "Include test setup",
      "datatype": "bool",
      "defaultValue": "true"
    }
  },
  "sources": [
    {
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        "**/.template.config/**"
      ],
      "modifiers": [
        {
          "condition": "(!enableTests)",
          "exclude": [
            "**/test/**"
          ]
        }
      ]
    }
  ]
}